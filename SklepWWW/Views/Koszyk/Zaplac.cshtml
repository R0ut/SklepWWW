@model SklepWWW.Models.Zamowienie
@{
    ViewBag.Title = "Zaplac";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section SectionTitle
{
    Uzupełnij dane zamówienia
}

@using (Html.BeginForm("Zaplac", "Koszyk"))
{
    <table id="checkout-address-table">
        <tr>
            <td>@Html.LabelFor(x => x.Imie, "Imie:")</td>
            <td>@Html.TextBoxFor(x => x.Imie)</td>
            <td>@Html.ValidationMessageFor(x => x.Imie)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Nazwisko, "Nazwisko:")</td>
            <td>@Html.TextBoxFor(x => x.Nazwisko)</td>
            <td>@Html.ValidationMessageFor(x => x.Nazwisko)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Adres, "Adres:")</td>
            <td>@Html.TextBoxFor(x => x.Adres)</td>
            <td>@Html.ValidationMessageFor(x => x.Adres)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Miasto, "Miasto:")</td>
            <td>@Html.TextBoxFor(x => x.Miasto)</td>
            <td>@Html.ValidationMessageFor(x => x.Miasto)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.KodPocztowy, "KodPocztowy:")</td>
            <td>@Html.TextBoxFor(x => x.KodPocztowy)</td>
            <td>@Html.ValidationMessageFor(x => x.KodPocztowy)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Telefon, "Telefon:")</td>
            <td>@Html.TextBoxFor(x => x.Telefon)</td>
            <td>@Html.ValidationMessageFor(x => x.Telefon)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Email, "Email:")</td>
            <td>@Html.TextBoxFor(x => x.Email)</td>
            <td>@Html.ValidationMessageFor(x => x.Email)</td>
        </tr>
        <tr>
            <td><label for="comment">Uwagi</label></td>
            <td>
                <textarea cols="40" rows="3" name="comment">@Model.Komentarz</textarea>
            </td>
        </tr>
    </table>

    @Html.ValidationSummary()
    <hr style="margin-bottom: 50px;"/>
    <div class="section-button-container">
        <a class="button-link" href="">Wróć</a>
        <input type="submit" class="button-link" style="" value="Potwierdź" />
    </div>
}

