@model SklepWWW.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}


@section SectionTitle
{
    Rejestracja
}

<div>
    @using (Html.BeginForm("Register", "Account"))
    {
        @Html.AntiForgeryToken()
        <div id="login-error">
            @Html.ValidationMessage("loginerror", "")
            @Html.ValidationSummary()
        </div>
        <table id="login-table" style="margin-left: auto; margin-right: auto;">
            <tr>
                <td>
                    @Html.LabelFor(x => x.Email, "Email:")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.Email)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x.Password, "Hasło:")
                </td>
                <td>
                    @Html.PasswordFor(x => x.Password)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td style="padding: 0px 20px 0px 0px; text-align: left;">
                    @Html.LabelFor(x => x.ConfirmPassword, "Potwierdź hasło")
                </td>
                <td style="padding: 0px; text-align: left">
                    @Html.PasswordFor(x => x.ConfirmPassword)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td colspan="2" style="text-align: right; padding-right: 20px;">
                    <input type="submit" value="Zarejestruj" class="submitLink" style="height: 40px; text-align: right; margin: 0px; padding: 0px;" />
                </td>
            </tr>
        </table>
    }
</div>

@section Skrypty
{
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


